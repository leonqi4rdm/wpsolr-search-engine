{
  "dynamic_templates": [
    {
      "text_en": {
        "match": "text",
        "mapping": {
          "type": "text",
          "analyzer": "english"
        }
      }
    },
    {
      "*_i": {
        "match": "*_i",
        "mapping": {
          "type": "integer"
        }
      }
    },
    {
      "*_s": {
        "match": "*_s",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "*_str": {
        "match": "*_str",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "*_l": {
        "match": "*_l",
        "mapping": {
          "type": "long"
        }
      }
    },
    {
      "*_t": {
        "match": "*_t",
        "mapping": {
          "type": "text"
        }
      }
    },
    {
      "*_b": {
        "match": "*_b",
        "mapping": {
          "type": "boolean"
        }
      }
    },
    {
      "*_f": {
        "match": "*_f",
        "mapping": {
          "type": "float"
        }
      }
    },
    {
      "*_d": {
        "match": "*_d",
        "mapping": {
          "type": "double"
        }
      }
    },
    {
      "*_dt": {
        "match": "*_dt",
        "mapping": {
          "type": "date"
        }
      }
    },
    {
      "*_ll": {
        "match": "*_ll",
        "mapping": {
          "type": "geo_point"
        }
      }
    }
  ],
  "properties": {
    "id": {
      "type": "keyword",
      "include_in_all": false
    },
